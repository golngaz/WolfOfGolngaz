{
  "compilerOptions": {
    "outDir": "dist",
    "strict": false,
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}